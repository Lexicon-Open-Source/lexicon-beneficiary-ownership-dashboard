# Docker Production Environment Configuration
# Copy this file and adjust values for your deployment

# Application
APP_NAME="Lexicon BO Dashboard"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-domain.com

# Locale
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (PostgreSQL - using Docker service names)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=lexicon_bo_dashboard
DB_USERNAME=lexicon
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Session & Cache (Redis - using Docker service names)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
CACHE_PREFIX=lexicon_

# Redis Configuration (using Docker service name)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
REDIS_PORT=6379

# Memcached (if needed)
MEMCACHED_HOST=127.0.0.1

# Elasticsearch (if needed)
ELASTIC_SEARCH_HOST=127.0.0.1
ELASTIC_SEARCH_API_PORT=9200
ELASTIC_SEARCH_TRANSPORT_PORT=9300
ELASTIC_SEARCH_SCHEME=
ELASTIC_SEARCH_USER=
ELASTIC_SEARCH_PASS=

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if using S3 for storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# Crawler Configuration (required for this application)
CRAWLER_BASE_URL=https://api.example.com
CRAWLER_API_KEY=your_api_key_here
CRAWLER_SALT=your_salt_here
CRAWLER_USER=your_user_here
CRAWLER_IDENTITY=your_identity_here
CRAWLER_TIMEOUT=30

# Docker-specific settings (for docker-compose.yml)
APP_PORT=8000
APP_DOMAIN=your-domain.com
